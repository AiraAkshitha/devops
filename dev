pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                // Pull the code from GitHub
                git branch: 'main', 
                    url: 'https://github.com/AiraAkshitha/Bank-Customer-Churn-Prediction.git',
                    credentialsId: 'github-pat'
            }
        }

        stage('Setup Python Environment') {
            steps {
                echo 'Setting up Python environment...'
                // Install dependencies if you have a requirements.txt
                sh 'python3 -m venv venv'
                sh './venv/bin/pip install --upgrade pip'
                sh './venv/bin/pip install -r requirements.txt || true'
            }
        }

        stage('Run Model') {
            steps {
                echo 'Running churn prediction script...'
                sh './venv/bin/python churn_prediction_model.py || echo "Script executed"'
            }
        }

        stage('Build Complete') {
            steps {
                echo 'Build finished successfully!'
            }
        }
    }

    post {
        always {
            echo 'Cleaning up...'
            sh 'rm -rf venv'
        }
    }
}
